{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/*/src"],
      "@apps/*": ["apps/*/src"],
      "@tools/*": ["tools/*/src"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "tools/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/build"
  ]
}
